{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":dependencyDashboard",
    ":disableRateLimiting",
    "docker:enableMajor",
    ":automergeDigest",
    ":enablePreCommit",
    "github>LucaDev/Home//.renovate/grafanaDashboards.json5",
  ],
  timezone: "Europe/Berlin",
  ignorePaths: ["^archive/**"],
  flux: {
    managerFilePatterns: [
      "/apps/.+\\.ya?ml$/",
      "/bootstrap/.+\\.ya?ml$/",
      "/flux/.+\\.ya?ml$/",
    ],
  },
  "helm-values": {
    managerFilePatterns: [
      "/apps/.+\\.ya?ml$/",
      "/bootstrap/.+\\.ya?ml$/",
      "/flux/.+\\.ya?ml$/",
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      "/apps/.+\\.ya?ml$/",
      "/bootstrap/.+\\.ya?ml$/",
      "/flux/.+\\.ya?ml$/",
    ],
  },
  terraform: {
    managerFilePatterns: ["/terraform/.+\\.tf$/"],
  },
  nix: {
    enabled: true,
  },
  packageRules: [
    {
      description: "Auto merge KPS minors and patches",
      matchDatasources: ["helm", "docker"],
      automerge: true,
      matchUpdateTypes: ["minor", "patch"],
      matchDepNames: ["kube-prometheus-stack"],
    },
    {
      description: "Auto merge container digests",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["digest"],
      matchPackageNames: [
        "ghcr.io/home-operations{/,}**",
        "ghcr.io/bjw-s{/,}**",
        "ghcr.io/lucadev{/,}**",
      ],
    },
    {
      description: "Flux Group",
      groupName: "Flux",
      matchDatasources: ["docker", "github-tags"],
      versioning: "semver",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      separateMinorPatch: true,
      matchPackageNames: ["/^flux/", "/^ghcr.io/fluxcd//"],
    },
    {
      description: "Immich images",
      groupName: "Immich",
      matchPackageNames: [
        "ghcr.io/immich-app/immich-server",
        "ghcr.io/immich-app/immich-machine-learning",
      ],
      matchDatasources: ["docker"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      separateMinorPatch: true,
    },
    {
      description: "keep mongo on 8.0.x",
      matchPackageNames: ["mongo"],
      matchDatasources: ["docker"],
      allowedVersions: "<8.1.0",
    },
  ],
  customManagers: [
    {
      customType: "regex",
      description: ["Process custom dependencies"],
      managerFilePatterns: [
        "/(^|/).taskfiles/.+\\.ya?ml(?:\\.j2)?$/",
        "/(^|/)apps/.+\\.ya?ml(?:\\.j2)?$/",
      ],
      matchStrings: [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+: (&\\S+\\s)?(?<currentValue>\\S+)",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+/(?<currentValue>(v|\\d)[^/]+)",
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
    },
  ],
}
